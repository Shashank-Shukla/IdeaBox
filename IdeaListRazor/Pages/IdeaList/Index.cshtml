@page
@model IdeaListRazor.Pages.IdeaList.IndexModel


<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Idea List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white">Create New Idea</a>
    </div>


    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if (Model.Ideas.Count() > 0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Ideas.FirstOrDefault().IdeaText"></label>
                        </th>
                        <th>
                            @*@Html.DisplayNameFor(m=>m.Ideas.FirstOrDefault().Author)*@
                            <label asp-for="Ideas.FirstOrDefault().Author"></label>
                        </th>
                        <th>
                            <label asp-for="Ideas.FirstOrDefault().Tag"></label>
                        </th>
                        <th>

                        </th>
                    </tr>
                    @foreach (var item in Model.Ideas)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(m => item.IdeaText)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Author)
                            </td>
                            <td>
                                @Html.DisplayFor(m => item.Tag)
                            </td>
                            <td>
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm">Delete</button>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a>
                                <div class="btn btn-warning" style="border-radius: 40%">
                                    @if (item.Rating == 0)
                                    {
                                        Html.Display("-");
                                    }
                                    else
                                    {
                                        Html.DisplayFor(m => item.Rating);
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p>No Ideas available.</p>
            }
        </form>
    </div>


    <div class="col-12" style="text-align:center">
        <br />
        <span class="h3 text-info">OR</span>
        <br /><br />
    </div>
    <div class="col-12 border p-3">

        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Idea</th>
                    <th> Author</th>
                    <th> Tag</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@section Scripts{ 
    <script src="~/js/IdeaList.js"></script>
}



